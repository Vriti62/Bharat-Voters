<html lang="en" dir="ltr">
  <head>
    <title>Login</title>
    <meta charset="UTF-8">
    <!--<title> Login and Registration Form in HTML & CSS | CodingLab </title>-->
    <link rel="stylesheet" type="text/css" href="/logstyle.css">
    <!-- Fontawesome CDN Link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/PICTURE/favicon.jpg" type="image/png">
   </head>
<body>
  <div class="container">
    <input type="checkbox" id="flip">
    <div class="cover">
      <div class="front">
        <img src="/PICTURE/vote_signup2.jpg" alt="">
        <div class="text">
          <span class="text-1">B H A R A T<br> V O T E R S </span>
          <span style="font-size: medium;" class="text-1"> A Digital Voting System for Digital India</span>
        </div>
      </div>  
      <div class="back">
        <img class="backImg" src="/PICTURE/vote_signup2.jpg" alt="">
        <div class="text">
          <span class="text-1">Complete miles of journey <br> with one step</span>
          <span class="text-2">Let's get started</span>
        </div>
      </div>
    </div>
    <div class="forms">
        <div class="form-content">
          <div class="login-form">

            <div class="title">Login</div>
          <form action="/user/login" method="post">
            <div class="input-boxes">
              <div class="input-box">
                <i class="fas fa-envelope"></i>
                <input id="aadharCardNumber" name="aadharCardNumber" type="text" placeholder="Enter your Aadhaar Number" required>
              </div>
              <div class="input-box">
                <i class="fas fa-lock"></i>
                <input id="password" name="password" type="password" placeholder="Enter your password" required>
              </div>
              <div class="text"><a href="#">Forgot password?</a></div>
              <div class="button input-box">
                <input type="submit" value="Login">
              </div>
              <div class="text sign-up-text">Don't have an account? <a href="/user/signup"><label>Sigup now</label></a> </div>
            </div>
        </form>
      </div>
        
   
    </div>
  </div>
</body>
</html>